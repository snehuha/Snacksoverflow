{
    "manifest_version": 3,
    "name": "Misinfo Check",  
    "version": "1.0",
    "description": "Detects misinformation in articles and posts.",
    "permissions": [
        "scripting",
        "storage",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
        },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}